# Maintainer: Marcel Korpel <marcel[dot]korpel[at]gmail>

_truepkgname=GemistDownloader
pkgver=2.8.1.7c
pkgname=${_truepkgname,,}
_pkgver=${pkgver//.}
pkgrel=1
pkgdesc='Download programs from Dutch broadcasting companies (currently beta)'
arch=('any')
url="http://helpdeskweb.nl/gemistdownloader/mono"
license=('CCPL:by-nc-nd')
depends=('mono' 'ffmpeg')
source=(http://www.helpdeskweb.nl/${_truepkgname}_for_Mono_${_pkgver}.zip
        ${pkgname}.sh)
sha256sums=('194eee438347ba93f208e856f89a1c81b8d4613dfa09750bd181319884c46998'
            '08fa204eec19b630837409c66bfe087a21bcebffa57f14919f1b88435f70da3a')

package() {
  cd "$srcdir"

  install -Dm644 ${_truepkgname}.exe "${pkgdir}/usr/share/${pkgname}/${_truepkgname}.exe"
  install -Dm755 ${pkgname}.sh "${pkgdir}/usr/bin/${pkgname}"
}
